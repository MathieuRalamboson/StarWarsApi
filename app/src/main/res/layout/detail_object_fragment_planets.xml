<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailobject"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.Fragment.DetailObjectFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/titreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/rotation_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="rotation_period"
                android:gravity="center_horizontal" />
            <TextView
            android:id="@+id/orbital_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orbital_period"
            android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/diameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="diameter"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/climate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="climate"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gravity"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/terrain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="terrain"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/surface_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="surface_water"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="population"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
